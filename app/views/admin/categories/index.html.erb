<div class="ibox">
  <div class="ibox-content">
    <div class="panel-body">  
      <p id="notice"><%= notice %></p>


      <table class="table table-bordered table-hover" >
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |cat| %>
            <tr>
              <td><%= cat.name %></td>
              <td><%= cat.description %></td>
              <td><%= link_to 'Edit', edit_admin_category_path(cat) %></td>
              <td><%= link_to 'Delete', admin_category_path(cat), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Category', new_admin_category_path %>

    </div>
  </div>
</div>
