		<div class="ibox">
        <div class="ibox-content">
        <div class="panel-body">	
 

			<%= form_for [:admin, @tag] do |f| %>
				<p><%= f.text_field :name, placeholder: 'Add tags' %></p>
				<p><%= f.submit :class => "btn btn-sm btn-primary" %></p>
			<% end %>

			<table class="table table-hover">
				<thead>
					<tr>
						<th>Name</th>
						<th>Status</th>
						
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @tags.each do |tag| %>
					<tr>
						<td><%= tag.name %></td>
						<td><%= status_converter(tag.in_use?, truthy: 'In use', falsey: 'Not in use') %></td>
						<td>
							<%= link_to edit_admin_tag_path(tag) do %>
								<button type="button">Edit</button>
							<% end %>
							<%= create_deletable_button tag %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>


